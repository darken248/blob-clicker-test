            num = 8
        } else if(prestige === 4) {
            num = 16
        } else if(prestige === 5) {
            num = 32
        } else if(prestige === 6) {
            num = 64
        } else if(prestige === 7) {
            num = 128
        } else if(prestige === 8) {
            num = 256
        } else if(prestige === 9) {
            num = 512
        } else if(prestige === 10) {
            num = 1024
        } else if(prestige > 10){
            prestige = 10
            num = 1024
            $.ajax({
            url: '/prestige',
            type: 'POST',
            data: {'prestige': prestige, 'username': username },
            })
        }
        //60 = 1 min// 600 = 10 min
        let min10 = Math.floor(Math.random() * 10)
        let time10to15 = 10 + min10
        let checktime = 60 * time10to15
        console.log(`min10 = ${min10}, time10to15  = ${time10to15}, checktime = ${checktime}`)
        setInterval(function() {
            let time = new Date;
            console.log(`(${time}) + (${time10to15}) + (${checktime * 10})`)
            return alert(`Are you there? It has been ${time10to15} minutes`)
        }, checktime * 1000);
        window.onload = function() {
            document.getElementById('version').innerHTML = version
            document.getElementById('prestige').innerHTML = prestige
            document.getElementById('spc').innerText = num
            alert('Sadly Blobclicker will be discounted and will be shutdown at the end of the month')
        }
        }
    </script>
