<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="/css">
    <script>
        function game(){
            location.href = "/game"
        }
    </script>
</head>
  <body>
      <div style="position: absolute;right: 5%;top: 5%;"><h4><a href="/login">Click here to Login </a></h4></div>
      <button class="game" onclick="game()"><img src="/img/game.png" height="70"></button>
      <br><br><br><br><br><br>
        <div class="center">
            <div class="container">
                <form action="/signup" method="post">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="username" class="form-control" name="username" minlength="6">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control" name="pwd">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox" required>I accept the <a href="/Terms-&-Conditions" target="_blank">Terms and Conditions</a></label>
                    </div>
                    <button type="submit" class="btn btn-default btn-primary">Signup</button>
                </form>
            </div>
        </div>
    </body>
</html>
